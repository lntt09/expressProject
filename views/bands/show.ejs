            <div class="inner top">
                <h3 class="masthead-brand" style="float: left; width: 200px">GigLink</h3>
                <nav class="nav nav-masthead justify-content-left">
                    <a class="nav-link active link" href="/" style=" color: whitesmoke;">Home</a>
                    <a class="nav-link active link" href="/band" style=" color: whitesmoke;">Bands</a>
                    <a class="nav-link active link" href="/venues" style=" color: whitesmoke;">Venues</a>
                </nav>
            </div>
        </header>
        
        
</div>

    <div class="container  w-100 h-100 mx-auto" style= "margin-top: 5%; ">
    
    
<div class="row" style="float: right;     margin-right: 2%;">
    <div class="jumbotron jumbotron-fluid" style="opacity: .88; width: 600PX;">
        <div class="container">
        <h1 class="display-3" style= "text-decoration: underline; "><%= oneBand.bandName %></h1>
